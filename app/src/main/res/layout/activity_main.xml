<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_tv"
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:gravity="start"
            android:padding="10dp"
            android:textSize="35sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/basic_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Basic Training"
            android:textSize="30sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/intermediate_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Intermediate Training"
            android:textSize="30sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/hard_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Hard Training"
            android:textSize="30sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/timer" />

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Click the timer to start."
            android:textSize="18sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/enter_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="Enter text here"
            android:inputType="textMultiLine|text"
            android:padding="10dp"
            android:textSize="35sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            tools:visibility="invisible" />

    </LinearLayout>
</FrameLayout>